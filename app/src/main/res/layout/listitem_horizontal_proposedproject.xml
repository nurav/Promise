<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/proposedproject_card_view"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_margin="5dp"
        >


        <ImageView
            android:id="@+id/imageview_proposed_title"
            android:layout_width="90dp"
            android:layout_height="70dp"

            android:src="@drawable/metro"
            android:layout_weight="1.40" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_name_proposed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colaba-Andheri Metro"
                android:ellipsize="marquee"
                android:textColor="#BF360C"

                />

            <TextView
                android:id="@+id/textview_city_proposed_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Mumbai"
                android:textColor="#424242"
                android:textSize="14dp"
                 />

        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>